<%- include("partials/header") %>

<style>
body {
  background: linear-gradient(135deg, #12385e, #003d66);
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.container {
  width: 400px;
  background-color: #292f3e;
  border-radius: 5px;
  padding: 40px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
}

.register-form {
  text-align: center;
}

h1 {
  font-size: 24px;
  color: #fff;
  margin-bottom: 30px;
}

.input-group {
  margin-bottom: 20px;
}

input {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  border-radius: 5px;
  border: none;
  outline: none;
}

label {
  color: #ddd;
  font-size: 16px;
  position: absolute;
  left: 10px;
  top: 8px;
  transition: all 0.3s ease;
  pointer-events: none;
}
.label-input-group-has-value {
  top: -12px;
  font-size: 12px;
  color: #4b9ce2;
}
.input-group input:focus + label,
.input-group input:valid + label {
  top: -12px;
  font-size: 12px;
  color: #4b9ce2;
}

a {
  color: #4b9ce2;
  text-decoration: none;
}

button[type="submit"] {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  border: none;
  outline: none;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  transition: all 0.3s ease;
}

button[type="submit"] {
  background-color: #4b9ce2;
  color: #fff;
  margin-bottom: 10px;
}


button:hover,
a:hover {
  opacity: 0.8;
}
</style>

<div class="container">
    <form action="/auth/register" method="POST" class="register-form" onsubmit="on_submit_register(event)">
        <h1>Register</h1>
        <div class="input-group">
            <input type="text" name="email" class="w-100" id="email" placeholder="" required>
            <label id="email-label" for="email">Email</label>
        </div>
        <div class="input-group">
            <input type="password" name="password" class="w-100" id="password" placeholder="" required>
            <label id="password-label" for="password">Password</label>
        </div>
        <div class="input-group">
            <input type="password" class="w-100" name="password_confirm" id="confirm-password" placeholder="" required>
            <label id="confirm-password-label" for="password-confirm">Confirm password</label>
        </div>
        <button type="submit">Register</button>
    </form>
</div>
<script>
    function on_submit_register(event) {
        const data = Object.fromEntries(new FormData(event.currentTarget).entries());
        console.log(data);
        if (data.password !== data.password_confirm) {
            toastr.error('Confirm password must match');
            event.preventDefault();
        }
    }
    const email = document.getElementById("email");
    const email_lb = document.getElementById("email-label");
    email.onchange = () => {
        if (email.value.trim() !== "") {
            email_lb.classList.add("label-input-group-has-value");
        } else {
            email_lb.classList.remove("label-input-group-has-value");
        }
    };
    const password = document.getElementById("password");
    const password_lb = document.getElementById("password-label");
    password.onchange = () => {
        if (password.value.trim() !== "") {
            password_lb.classList.add("label-input-group-has-value");
        } else {
            password_lb.classList.remove("label-input-group-has-value");
        }
    };
    const confirm_password = document.getElementById("confirm-password");
    const confirm_password_lb = document.getElementById("confirm-password-label");
    confirm_password.onchange = () => {
        if (confirm_password.value.trim() !== "") {
            confirm_password_lb.classList.add("label-input-group-has-value");
        } else {
            confirm_password_lb.classList.remove("label-input-group-has-value");
        }
    };
</script>
<% if (error) {%>
<script>
    toastr.error('<%= error %>');
</script>
<% } %>

<%- include("partials/footer") %>
