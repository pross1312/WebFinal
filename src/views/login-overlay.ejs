<div id="login-overlay" style="position: fixed; z-index: 100">
<style>
.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.1); /* Adjust the alpha (last) value for the overlay color */
    backdrop-filter: blur(2px); /* Adjust the blur radius as needed */
    z-index: 2;
}
.login-container {
    font-family: 'Arial', sans-serif;
    background-color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    border-radius: 8px;
    width: 300px;
    text-align: center;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
}

.login-container input {
    width: 100%;
    padding: 10px;
    margin: 8px 0;
    box-sizing: border-box;
    border: 2px solid #3498db;
    border-radius: 8px;
    background-color: #ecf0f1;
    color: #333;
}

.login-container button {
    width: 100%;
    background-color: #3498db;
    color: #fff;
    padding: 10px;
    margin: 10px 0;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.login-container button:hover {
    background-color: #2980b9;
}

.remember-me {
    display: flex;
    align-items: start;
    justify-content: start;
    margin-top: 10px;
    color: #3498db;
}
.register {
    cursor: pointer;
    color: #3498db;
    margin-left: 0px;
}
.google-auth {
    background-color: #2ecc71;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.google-auth:hover {
    background-color: #27ae60;
}
.header {
    border-top-right-radius: 15px;
    border-top-left-radius: 15px;
    display: flex;
    justify-content: end;
    flex-grow: 0;
    position: absolute;
    top: 0px;
    right: 20px;
}
</style>
<div class="overlay"></div>
<div class="login-container">
    <script>
        function display_register(){ 
        }
    </script>
    <div class="header">
        <span class="chat-box-header" data-bs-theme="light">
            <button onclick="(() => {document.getElementById('login-overlay').remove();})()" type="button" class="btn-close d-block my-auto" aria-label="Close"></button>
        </span>
    </div>
    <h2 style="color: #3498db;">Login</h2>
    <form action="/auth/login" method="post">
        <input type="text" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <div class="remember-me">
            <input style="width: 10%;" type="checkbox" name="remember" value="true" id="remember"> 
            <label for="remember">Remember me</label>
        </div>
        <button type="submit">Login</button>
        <a href="/auth/google"><button type="button" class="google-auth">Login with google</button></a>
    </form>
    <div class="d-flex justify-content-start">
        <a href="/auth/register" class="text-start register">Register</a>
    </div>
    <% if (error) {%>
    <script>
        toastr.error('<%= error %>');
    </script>
    <% } %>
</div>
</div>
