<header class="mb-4" style="padding: 5px">
  <h1><%= product.name %></h1>
</header>

<main class="row" style="padding: 2px">
    <section class="col-md-4 mb-4">
        <img src="<%= product.image %>" alt="<%= product.name %> Image" class="img-fluid w-100">
    </section>

    <section class="col-md-8">
        <h2>Product Details</h2>
        <p><strong>Category:</strong> <%= product.category %></p>
        <p><strong>Description:</strong> <%= product.description %></p>
        <p><strong>Manufacturer:</strong> <%= product.manufacturer %></p>
        <p><strong>Release Date:</strong> <%= product.releaseDate %></p>
        <p><strong>Rating:</strong> <%= product.rating %> stars</p>
        <h2>Pricing and Availability</h2>
        <p><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
        <p><strong>Stock Quantity:</strong> <%= product.stockQuantity %> units</p>
    </section>
</main>

