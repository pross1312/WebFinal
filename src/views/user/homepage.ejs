<%- include("../partials/header") %>

<!--Main Navigation-->
<header>
    <!-- Jumbotron -->
    <%- include('./chat') %>
    <div class="p-3 text-center bg-white border-bottom">
      <div class="container">
        <div class="row gy-3">
          <!-- Left elements -->
          <div class="col-lg-2 col-sm-4 col-4">
