<style>
  .carousel-item img{ 
    max-width: 100%;
    max-height: 420px;
    min-height: 420px;
    object-fit: cover;
    margin-top: -80px; /* hot change*/ 
    object-position: center 80px
  }

  ul{ 
    list-style: none;
    padding: 0;
    margin: 0;
  }
  a{ 
    color: #000;
    text-decoration: none;
  }
  

  .cateActive:hover .menu{ 
    display: flex;
    flex-direction: column;
  }
  
  .menu{ 
    position: absolute;
    z-index: 100;
    display: none;
    background: #242526;
    color: #fff;
    border-radius: 2px;
  }
  .menu a{ 
    color: #fff;
  }
  .menu > li {
    display: inline-block;
    padding: 10px 20px;
    border-bottom: 1px solid #ccc;
  }

  .menu li:hover{ 
    background-color: #0d6efd;
  }
  .menu li {
    position: relative;
  }
  .menu li:hover > .sub-menu {
    display: block;
  }
  .sub-menu {
    position: absolute;
    top: 0;
    left: 100%;
    width: 140px;
    background: #242526;
    display: none;
    border-radius: 2px; 
  }

  .sub-menu a:hover{
    display: block;
    background: #0d6efd;
  }

  .sub-menu a {
    display: block;
    padding: 10px 20px;
    color: #fff;
    border-bottom: 1px solid #ccc;
  }

  .sub-menu .sub-menu {
    left: 100%;
    top: 0;
    display: none;
  }

</style>
