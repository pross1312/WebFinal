<%- include("../partials/header") %>
<!--Main Navigation-->
<style>
  .carousel-item img{ 
    max-width: 100%;
    max-height: 420px;
    min-height: 420px;
    object-fit: cover;
    margin-top: -80px; /* hot change*/ 
    object-position: center 80px
  }

  ul{ 
    list-style: none;
    padding: 0;
    margin: 0;
  }
  a{ 
    color: #000;
    text-decoration: none;
  }
</style>
<div class="container-sm">
  <header>
      <% if (is_login) { %>
          <%- include('./chat') %>
      <% } %>
      <%- include('links') %> 
      <%- include('usernavbar') %> 
      <!-- Slider -->
      <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="resources/slide-1.jpg" class="d-block w-100" alt="Slider Image 1">
          </div>
          <div class="carousel-item">
            <img src="resources/slide-2.jpg" class="d-block w-100" alt="Slider Image 2">
          </div>
          <div class="carousel-item">
            <img src="resources/slide-3.jpg" class="d-block w-100" alt="Slider Image 2">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <!-- End Slider -->
  
    </header>
    <!-- Products -->
    <section>
      <div class="container my-5" >
        <header class="mb-4">
          <h3>New products</h3>
        </header>
  
        <div class="row">
          <% products.forEach(product => { %>
            <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
              <div class="card w-100 my-2 shadow-2-strong">
                <a href="/user/detail?product_id=<%= product.id %>">
                  <img src="<%=product.image%>" class="card-img-top" style="aspect-ratio: 1 / 1"/>
                </a>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%=product.p_name%></h5>
                  <h5 class="card-title"><%=product.name%></h5>
                  <p class="card-text">$<%=product.price%></p>
                  <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                    <button onclick="add_to_cart(<%=product.id%>)" class="btn btn-primary shadow-0 me-1 w-100">Add to cart</button>
                    <a href="#!" class="btn btn-light border px-2 pt-2 icon-hover"><i class="fas fa-heart fa-lg text-secondary px-1"></i></a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
          </div>
        </div>
    </section>
