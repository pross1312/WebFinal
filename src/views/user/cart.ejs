<%- include("../partials/header") %>

<style>
    :root {
        --main-color: rgba(255, 66, 78, 1);
    }
    body {
        background-color: rgba(245, 245, 250, 1);
        color: black;
    }
    .container {
        box-sizing: border-box;
        max-width: 1300px;
        display: flex;
        background-color: rgba(245, 245, 250, 1);
        padding: 0px 24px;
        margin: 0 auto;
    }

    .left-container {
        background-color: #fff;
        width: 70%;
        margin-top: 20px;
        border-radius: 6px;
        padding: 0px 12px;
        box-shadow: 10px 10px 5px #aaaaaa2d;
    }

    .products {
        margin-top: 40px;
        position: relative;
    }
    .product-tilte{ 
        position: absolute;
        display: flex;
        top: 0;
        left: calc(300px + 4vw);
    }
    .product-tilte p{ 
        font-size: 14px;
        font-weight: 500;
        margin-left: 50px;
    }
    .product {
        display: flex;
        padding: 16px 0px;
        justify-content: space-between;
        align-items: center;
        text-align: left;
        border-bottom: 1px solid #bebebe;
    }
    .product-image {
        max-width: 80px;
        max-height: 80px;
        object-fit: cover;
    }

    .imgOfficial {
        position: absolute;
        top: calc(-14px - 0.3vw);
        left: -6px;
        max-width: 100px;
    }

    .product-name {
        position: relative;
        font-size: calc(12px + 0.3vw);
        max-width: 180px;
        min-width: 180px;
        word-wrap: break-word;
    }

    .product-intoMoney {
        color: var(--main-color);
        font-weight: 700;
        max-width: 120px;
        min-width: 120px;
    }
    .btnDelete {
        width: 30px;
        height: 30px;
        cursor: pointer;
    }

    .purchase-button {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        padding-left: 20px;
    }
    .purchase-button button {
        background-color: var(--main-color);
        border: none;
        color: #fff;
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        font-size: calc(12px + 0.3vw);
        text-align: center;
        cursor: pointer;
        margin-top: 20px;
    }

    .purchase-button button:hover .bill {
        box-shadow: 10px 10px 5px #aaaaaa00;
        scale: 2;
    }
    .right-container {
        width: 30%;
    }
    .bill {
        background-color: #fff;
        max-height: 300px;
        min-height: 300px;
        margin-top: 20px;
        margin-left: 20px;
        border-radius: 6px;
        padding: 0px 12px;
        scale: 1;
        box-shadow: 10px 10px 5px #aaaaaa98;
    }

    .user {
        display: flex;
    }

    .user-name {
        padding: 0px 6px;
        font-weight: 500;
        font-size: calc(12px + 0.5vw);
        object-fit: cover;
    }
    .user-avatar {
        max-width: 50px;
    }
    .total-item,
    .total-Funds {
        display: flex;
        justify-content: space-between;
    }

    .total-item p,
    .total-Funds p {
        font-weight: 500;
        font-size: calc(12px + 0.5vw);
    }

    .bill-info {
        padding: 0px 20px;
    }
</style>
<div class="container">
    <div class="left-container">
        <h2 class="product-heading">Cart</h2>
        <!-- product here -->
        <div class="products">
            <div class="product-tilte">
                <p>Unit Price</p>
                <p>Amount</p>
                <p>Into Money</p>
            </div>
        <% products.forEach((product, index) => { %>
                <div class="product">
                    <img
                    class="product-image"
                    src="<%= product.image %>"
                    alt=""
                    />
                    <div class="product-name">
                        <img
                        class="imgOfficial"
                        src="/icon/official.png"
                        alt=""
                        />
                        <p>
                            <%= product.p_name %>
                        </p>
                    </div>
                    <p class="product-unitPrice"> <%= product.price %></p>
                    <p class="prodcut-amount"><%= product.count %></p>
                    <p class="product-intoMoney"><%- parseFloat(product.price * product.count).toFixed(2) %></p>
                    <img src="/icon/icons8-delete.svg" alt="" class="btnDelete" />
                </div>
        <% }); %>
         </div>
    </div>
    <div class="right-container">
        <div class="bill">
            <div class="user">
                <img
                    class="user-avatar"
                    src="https://i.stack.imgur.com/frlIf.png"
                    alt=""
                />
                <p class="user-name"><%= email %></p>
            </div>
            <div class="bill-info">
                <div class="total-item">
                    <p class="total-item--label">Items</p>
                    <p class="total-item--count"><%= items %></p>
                </div>
                <div class="total-Funds">
                    <p class="total-Funds--label">Total Funds:</p>
                    <p class="total-Funds--count"><%= total %></p>
                </div>
            </div>
        </div>
        <div class="purchase-button">
            <button class="">Purchase</button>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
