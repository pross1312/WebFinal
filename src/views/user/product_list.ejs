<%- include("../partials/header") %>
<header>
  <!-- Jumbotron -->
  <div class="p-3 text-center bg-white border-bottom">
    <div class="container">
      <div class="row gy-3">
        <!-- Left elements -->
        <div class="col-lg-2 col-sm-4 col-4">
          <a href="/" class="float-start">
            <img src="https://mdbootstrap.com/img/logo/mdb-transaprent-noshadows.png" height="35" />
          </a>
        </div>
        <!-- Left elements -->

        <!-- Center elements -->
        <div class="order-lg-last col-lg-5 col-sm-8 col-8">
          <div class="d-flex float-end">
            <a href="#" class="me-2 border rounded py-1 px-3 nav-link d-flex align-items-center" > 
              <i class="fas fa-user-alt m-1 me-md-2"></i>
              <p class="d-none d-md-block mb-0" style="font-size: 14px;">Sign in</p> 
            </a>

            <a href="#" class="me-2 border rounded py-1 px-3 nav-link d-flex align-items-center" > 
              <i class="fas fa-heart m-1 me-md-2">
              </i><p class="d-none d-md-block mb-0">Wishlist</p> 
            </a>

            <a href="/payment/create-order" class="me-2 border rounded py-1 px-3 nav-link d-flex align-items-center"> 
              <i class="fas fa-shopping-cart m-1 me-md-2"></i>
              <p class="d-none d-md-block mb-0">My cart</p> 
